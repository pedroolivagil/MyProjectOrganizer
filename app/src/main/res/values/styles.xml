<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--To change the text styling of options menu items</item>-->
        <item name="android:itemTextAppearance">@style/MyActionBar.MenuTextStyle</item>
        <!--To change the background of options menu-->
        <item name="android:itemBackground">@color/colorPrimary</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
    </style>

    <style name="MyActionBar.MenuTextStyle" parent="style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- displays the overflow menu below the toolbar-->
    <style name="OverflowMenu" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="android:dropDownVerticalOffset">-4dp</item>
        <item name="overlapAnchor">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CommonActivity" parent="AppTheme">
        <item name="android:background">@color/EEE</item>
    </style>

    <style name="CommonBackground" parent="AppTheme">
        <item name="android:background">@color/white</item>
    </style>

    <style name="UnderlineTitle" parent="AppTheme">
        <!--<item name="android:background">@color/colorPrimaryLight</item>-->
        <item name="android:paddingBottom">1dp</item>
    </style>

    <style name="ImgProjectMain" parent="CommonBackground">
        <item name="android:padding">@dimen/pad5</item>
    </style>

    <style name="TitleProjectMain" parent="CommonBackground">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/size18</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingTop">@dimen/pad0</item>
        <item name="android:paddingBottom">@dimen/pad0</item>
        <item name="android:paddingLeft">@dimen/pad0</item>
        <item name="android:paddingRight">@dimen/pad0</item>
    </style>

    <style name="LastUpdateProjectMain" parent="AppTheme">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">@dimen/size12</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/pad0</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/transparentWhite</item>
    </style>

    <style name="previewProjectTitleImg" parent="AppTheme">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/size16</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingTop">@dimen/pad0</item>
        <item name="android:paddingBottom">@dimen/pad0</item>
        <item name="android:paddingLeft">@dimen/pad5</item>
        <item name="android:paddingRight">@dimen/pad0</item>
        <item name="android:gravity">center|left</item>
        <item name="android:background">@color/EEE</item>
    </style>

    <style name="layoutPreviewStyle" parent="AppTheme">
        <item name="android:paddingTop">@dimen/pad0</item>
        <item name="android:paddingBottom">@dimen/pad2</item>
        <item name="android:paddingLeft">@dimen/pad0</item>
        <item name="android:paddingRight">@dimen/pad0</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="ButtonGeneric" parent="AppTheme">
        <item name="android:background">@color/colorAccent</item>
        <!-- <item name="android:padding">@dimen/pad5</item> -->
    </style>

    <style name="ButtonWithoutMin" parent="AppTheme">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:padding">@dimen/pad5</item>
    </style>

    <style name="Button" parent="AppTheme">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:padding">@dimen/pad5</item>
        <item name="android:minWidth">120dp</item>
    </style>

    <style name="ButtonWhite" parent="Button">
        <item name="android:background">@color/transparentFull</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Button.ImageView" parent="AppTheme">
        <item name="android:height">50dp</item>
        <item name="android:width">50dp</item>
    </style>

    <style name="Button.TextView" parent="AppTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ButtonRight" parent="Button.TextView">
        <item name="android:gravity">right</item>
    </style>

    <style name="Button.TextView.Center" parent="AppTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/size18</item>
        <item name="android:gravity">center|center_horizontal</item>
    </style>

    <style name="Button.TextView.Center.Black" parent="Button.TextView.Center">
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="ButtonOption" parent="AppTheme">
        <item name="android:textSize">@dimen/size18</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingTop">@dimen/pad15</item>
        <item name="android:paddingBottom">@dimen/pad15</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="ButtonOptionLayout" parent="AppTheme">
        <item name="android:textSize">@dimen/size18</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingTop">@dimen/pad8</item>
        <item name="android:paddingBottom">@dimen/pad8</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="ButtonOptionMini" parent="AppTheme">
        <item name="android:textSize">@dimen/size12</item>
        <item name="android:paddingLeft">@dimen/pad5</item>
    </style>

    <style name="ButtonOptionMiniAlert" parent="ButtonOptionMini">
        <item name="android:textColor">@color/colorAlert</item>
    </style>

    <style name="DividerOptions" parent="AppTheme">
        <item name="android:background">@color/divider</item>
    </style>

    <style name="ProjectSelectedBackgroundTransparent" parent="AppTheme">
        <item name="android:background">@color/transparentBlack</item>
        <item name="android:paddingLeft">@dimen/mar10</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/primaryText</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
    </style>

    <style name="TextViewTitleProjectSelected" parent="ProjectSelectedBackgroundTransparent">
        <item name="android:background">@color/transparentFull</item>
        <item name="android:textSize">@dimen/size24</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="TextViewSubTitleProjectSelected" parent="ProjectSelectedBackgroundTransparent">
        <item name="android:background">@color/transparentFull</item>
        <item name="android:textSize">@dimen/size14</item>
        <item name="android:shadowRadius">1</item>
    </style>
</resources>
